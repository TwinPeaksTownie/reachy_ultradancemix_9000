{
  "name": "Spotify Design Tokens",
  "version": "1.0.0",
  "description": "Official Spotify design system tokens for developers",
  "colors": {
    "brand": {
      "green": {
        "primary": "#1DB954",
        "light": "#1ED760",
        "rgb": "rgb(29, 185, 84)",
        "rgba": "rgba(29, 185, 84, 1)",
        "hsl": "hsl(141, 73%, 42%)",
        "cmyk": "80, 0, 80, 0"
      }
    },
    "backgrounds": {
      "base": "#121212",
      "elevated": "#181818",
      "elevated2": "#282828",
      "elevated3": "#3E3E3E",
      "black": "#000000",
      "spotifyBlack": "#191414"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#B3B3B3",
      "tertiary": "#A7A7A7",
      "subdued": "#6A6A6A",
      "disabled": "#535353"
    },
    "ui": {
      "border": "#404040",
      "divider": "#282828",
      "focus": "#FFFFFF",
      "error": "#E22134",
      "warning": "#FFA42B",
      "success": "#1DB954"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "Circular, -apple-system, BlinkMacSystemFont, Helvetica Neue, Helvetica, Arial, sans-serif",
      "display": "Circular",
      "fallback": "Helvetica Neue, Helvetica, Arial, sans-serif"
    },
    "fontWeights": {
      "light": 300,
      "regular": 400,
      "book": 400,
      "medium": 500,
      "bold": 700,
      "black": 900
    },
    "fontSizes": {
      "xxxl": "96px",
      "xxl": "72px",
      "xl": "48px",
      "lg": "32px",
      "h1": "28px",
      "h2": "24px",
      "h3": "20px",
      "h4": "18px",
      "base": "16px",
      "sm": "14px",
      "xs": "12px",
      "xxs": "11px"
    },
    "lineHeights": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.6
    },
    "letterSpacing": {
      "tight": "-0.02em",
      "normal": "0",
      "wide": "0.05em"
    }
  },
  "spacing": {
    "xxxs": "4px",
    "xxs": "8px",
    "xs": "12px",
    "sm": "16px",
    "md": "24px",
    "lg": "32px",
    "xl": "48px",
    "xxl": "64px",
    "xxxl": "96px"
  },
  "borderRadius": {
    "none": "0",
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "full": "500px",
    "circle": "50%"
  },
  "shadows": {
    "sm": "0 2px 4px rgba(0, 0, 0, 0.5)",
    "md": "0 4px 8px rgba(0, 0, 0, 0.6)",
    "lg": "0 8px 16px rgba(0, 0, 0, 0.7)",
    "xl": "0 16px 32px rgba(0, 0, 0, 0.8)"
  },
  "transitions": {
    "duration": {
      "instant": "100ms",
      "fast": "200ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "standard": "cubic-bezier(0.4, 0.0, 0.2, 1)",
      "decelerate": "cubic-bezier(0.0, 0.0, 0.2, 1)",
      "accelerate": "cubic-bezier(0.4, 0.0, 1, 1)"
    }
  },
  "breakpoints": {
    "xs": "480px",
    "sm": "768px",
    "md": "1024px",
    "lg": "1280px",
    "xl": "1920px"
  },
  "components": {
    "button": {
      "primary": {
        "background": "#1DB954",
        "color": "#FFFFFF",
        "borderRadius": "500px",
        "paddingSmall": "8px 16px",
        "paddingMedium": "12px 32px",
        "paddingLarge": "16px 48px",
        "minHeight": "48px",
        "fontWeight": 700,
        "letterSpacing": "0.1em",
        "textTransform": "uppercase",
        "hoverBackground": "#1ED760",
        "hoverTransform": "scale(1.04)",
        "activeTransform": "scale(0.96)"
      },
      "secondary": {
        "background": "transparent",
        "color": "#FFFFFF",
        "border": "2px solid #FFFFFF",
        "borderRadius": "500px",
        "paddingMedium": "14px 32px",
        "fontWeight": 700,
        "letterSpacing": "0.1em",
        "textTransform": "uppercase",
        "hoverBorder": "#1DB954",
        "hoverColor": "#1DB954"
      },
      "heights": {
        "small": "32px",
        "medium": "48px",
        "large": "56px"
      }
    },
    "card": {
      "background": "#181818",
      "hoverBackground": "#282828",
      "borderRadius": "8px",
      "padding": "16px",
      "artworkBorderRadius": "4px",
      "titleFontSize": "16px",
      "titleFontWeight": 700,
      "titleColor": "#FFFFFF",
      "subtitleFontSize": "14px",
      "subtitleFontWeight": 400,
      "subtitleColor": "#B3B3B3",
      "textClamp": 2
    },
    "navbar": {
      "height": "64px",
      "background": "#000000",
      "padding": "0 32px",
      "linkColor": "#B3B3B3",
      "linkHoverColor": "#FFFFFF",
      "linkFontSize": "14px",
      "linkFontWeight": 700,
      "linkMargin": "0 16px"
    },
    "sidebar": {
      "width": "240px",
      "background": "#000000",
      "padding": "24px 12px",
      "itemHeight": "40px",
      "itemPadding": "0 16px",
      "itemBorderRadius": "4px",
      "itemColor": "#B3B3B3",
      "itemHoverColor": "#FFFFFF",
      "itemFontSize": "14px",
      "itemFontWeight": 700
    },
    "input": {
      "height": "48px",
      "background": "#121212",
      "border": "1px solid #727272",
      "borderRadius": "4px",
      "padding": "0 16px",
      "color": "#FFFFFF",
      "fontSize": "16px",
      "focusBorder": "#FFFFFF",
      "focusOutline": "2px solid #FFFFFF",
      "placeholderColor": "#6A6A6A"
    },
    "artwork": {
      "borderRadiusSmall": "4px",
      "borderRadiusLarge": "8px",
      "aspectRatio": "1:1"
    },
    "player": {
      "miniPlayerHeight": "90px",
      "miniPlayerBackground": "#181818",
      "miniPlayerBorder": "1px solid #282828",
      "artworkSize": "56px",
      "artworkBorderRadius": "4px",
      "playButtonSize": "32px",
      "playButtonBackground": "#FFFFFF",
      "playButtonColor": "#000000"
    }
  },
  "accessibility": {
    "minTouchTarget": "44px",
    "recommendedTouchTarget": "48px",
    "minSpacingBetweenTargets": "8px",
    "minBodyTextSize": "14px",
    "minUITextSize": "12px",
    "contrastRatios": {
      "normalText": "4.5:1",
      "largeText": "3:1",
      "uiComponents": "3:1"
    },
    "focusOutline": "2px solid #FFFFFF",
    "focusOutlineOffset": "2px",
    "greenFocusOutline": "3px solid #1DB954"
  },
  "logo": {
    "minSizes": {
      "fullLogoDigital": "70px",
      "fullLogoPrint": "20mm",
      "iconDigital": "21px",
      "iconPrint": "6mm"
    },
    "exclusionZone": "0.5x icon height",
    "colorways": {
      "green": {
        "use": "black, white, or non-duotoned photography",
        "file": "spotify-full-logo-green.svg"
      },
      "black": {
        "use": "light colored backgrounds",
        "file": "spotify-full-logo-black.svg"
      },
      "white": {
        "use": "dark colored backgrounds",
        "file": "spotify-full-logo-white.svg"
      }
    }
  },
  "metadata": {
    "characterLimits": {
      "playlistName": 25,
      "artistName": 18,
      "trackName": 23
    }
  }
}
